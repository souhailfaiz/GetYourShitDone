<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name" />

    <Button
        android:id="@+id/btnOpslaan"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="88dp"
        android:text="Wijzigingen opslaan"
        android:layout_alignLeft="@+id/editTitle"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="29dp"
        android:text="Verwijderen"
        android:layout_alignLeft="@+id/editTitle"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/editNotes"
        android:layout_width="356dp"
        android:layout_height="119dp"
        android:layout_alignStart="@+id/btnOpslaan"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        tools:text="Notes"
        android:layout_alignLeft="@+id/btnOpslaan"
        android:layout_marginLeft="-5dp" />

    <Spinner
        android:id="@+id/editCat"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="216dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTitle"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="200dp"
        android:text="Categorie:"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/editIsCompleted"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnOpslaan"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginBottom="149dp"
        android:text="Voltooid" />

    <Switch
        android:id="@+id/editPriority"
        android:layout_width="354dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/btnOpslaan"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="186dp"
        android:text="Prioriteit"
        android:textColorLink="@color/colorYC" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTitle"
        android:layout_alignParentTop="true"
        android:text="Taak Titel:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTitle"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="64dp"
        android:text="Taak Omschrijving:"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnUploadImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editPriority"
        android:layout_centerVertical="true"
        android:text="Upload image" />

    <Button
        android:id="@+id/btnShowImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPriority"
        android:layout_centerVertical="true"
        android:text="Show image" />

</RelativeLayout>